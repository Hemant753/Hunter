<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Detail</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <base href="/fashionHunter/User/">
</head>
<body class="bg-gray-100">

  <!-- Header -->
  <header class="flex shadow-md justify-between items-center border-b p-4">
    <h1 class="text-2xl px-2 font-bold">Order Detail.</h1>
    <a href="shop" class="text-sm text-blue-500">Home</a>
  </header>

  <!-- Main Content -->
  <div class="max-w-6xl mx-auto p-4 grid grid-cols-1 lg:grid-cols-3 gap-4">
    
    <!-- Order Items -->
    <div class="lg:col-span-2 grid grid-cols-1 sm:grid-cols-2 gap-4">
      <% for (let i = 0; i < 10; i++) { %>
        <div class="w-full shadow">
          <div class="h-[200px] sm:h-[250px] flex items-center justify-center bg-orange-600">
            <img src="/image/demo.png" alt="Product Image" class="h-[90%] w-[90%] object-cover">
          </div>                    
          <div class="w-full p-2 px-3 flex justify-between items-center bg-orange-300">
            <div class="flex flex-col text-orange-700">
              <span class="font-medium">Black T-shirt</span>
              <span>$200</span>
            </div>
          </div>
        </div>
      <% } %>
    </div>

    <!-- Order Details -->
    <div class="bg-white h-3/4 p-4 rounded-md shadow-md flex flex-col gap-4 sticky top-4 h-fit self-start">
      <h2 class="text-lg font-semibold border-b pb-2">Order Details</h2>
      <p class="mt-2 text-sm text-gray-500 font-medium">Date: 00/00/0000</p>
      <p class="text-sm font-medium">Total Amount: <span class="text-blue-500">$40</span></p>
      <p class="text-sm font-medium">Order Status: <span class="text-green-500">Delivered</span></p>
      <div class="mt-20 flex flex-col justify-center items-center border-b pb-6">
        <h3 class="text-lg font-medium">Code:</h3>
        <p class="text-xl font-semibold text-center bg-gray-300 py-1 px-3 tracking-widest rounded">9922</p>
      </div>
    </div>

  </div>

</body>
</html>
