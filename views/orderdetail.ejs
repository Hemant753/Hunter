<!DOCTYPE html>
<html lang="en" ng-app="orderApp">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Detail</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
</head>
<body class="bg-gray-100" ng-controller="OrderController">

  <!-- Header -->
  <header class="flex shadow-md justify-between items-center border-b p-4">
    <h1 class="text-2xl px-2 font-bold">Order Detail.</h1>
    <a href="/" class="text-sm text-blue-500">Home</a>
  </header>

  <!-- Main Content -->
  <div class="max-w-6xl mx-auto p-4 grid grid-cols-1 lg:grid-cols-3 gap-4">
    
    <!-- Order Items -->
    <div class="lg:col-span-2 grid grid-cols-2 gap-4">
      <div class="w-[300px] " ng-repeat="item in order.items" >
        <div class="h-[250px] w-[300px] flex items-center justify-center bg-orange-600 " >
          <img src="\image\demo.png" alt="{{product.name}}" class=" h-[94%] w-[94%] object-cover ">
      </div>                    
      <div class="w-full p-2 px-3 flex justify-between items-center bg-orange-300 ">
          <div class=" flex flex-col text-orange-700">
              <span class="font-medium  " >Black T-shirt</span>
              <span >$200</span>
          </div>
      </div>
      </div>
    
    </div>




    <!-- Order Details -->
    <div class="bg-white p-4 rounded-md shadow-md flex flex-col gap-2 ">
      <h2 class="text-lg font-semibold border-b pb-2">Order Details</h2>
      <p class="mt-2 text-sm text-gray-500 font-medium ">Date: {{order.date}}</p>
      <p class="text-sm font-medium ">Total Amount: <span class="text-blue-500">${{order.totalAmount}}</span></p>
      <p class="text-sm font-medium ">Order Status: <span class="text-green-500">{{order.status}}</span></p>
      <div class="mt-60 flex flex-col justify-center items-center border-b pb-6">
        <h3 class="text-lg font-medium">Code:</h3>
        <p class="text-xl font-semibold text-center bg-gray-300 py-1 px-3 tracking-widest rounded">{{order.code}}</p>
      </div>
    </div>

  </div>

  <!-- AngularJS Script -->
  <script>
    angular.module("orderApp", []).controller("OrderController", function ($scope) {
      $scope.order = {
        date: "00/00/0000",
        totalAmount: 40,
        status: "Delivered",
        code: 9922,
        items: [
          { name: "Black Tshirt", price: 20, image: "/image/demo.png" },
          { name: "Black Tshirt", price: 20, image: "/image/demo.png" },
          { name: "Black Tshirt", price: 20, image: "/image/demo.png" },
          { name: "Black Tshirt", price: 20, image: "/image/demo.png" },
          { name: "Black Tshirt", price: 20, image: "/image/demo.png" },
          { name: "Black Tshirt", price: 20, image: "/image/demo.png" },
        ],
      };
    });
  </script>
</body>
</html>
